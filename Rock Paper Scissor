import java.util.*;

public class RockPaperScissor{
    
    public void play(){
    Scanner console = new Scanner(System.in);
    Random generator = new Random();
    System.out.println("Welcome to rock, paper, scissor game \nplease input your number (1 for rock, 2 for paper, 3 for scissor)");
    System.out.print("input your number :");
    int Userinput = (int)console.nextInt();
    int Bebas = generator.nextInt(3)+1;
    
    
    
    if (Userinput == Bebas) {
	System.out.println("DRAW");
	}

    else if ((Userinput == 1 && Bebas == 3) || (Userinput == 2 && Bebas == 1) || (Userinput == 3 && Bebas == 2)) {
	System.out.println("You Wins");
	} 

    else {
      System.out.println("Sorry, you lose");
    }
    
    }
}
